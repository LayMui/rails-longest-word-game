<div class="container">
<h2>New Game</h2>

<% @grid.each do |letter| %>
 <button type="button" class="btn btn-info"><%= letter%></button>
  <% end %>


<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :original_letters, @grid %>
  <label>What is the longest word you can find</label><br>
  <input type="text" name="word">
  <input type="submit" value="Play">

</form>
</div>
